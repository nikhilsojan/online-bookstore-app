<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".AddbooksActivity">

  <EditText
      android:id="@+id/bookname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="83dp"
      android:layout_marginTop="208dp"
      android:layout_marginEnd="115dp"
      android:layout_marginBottom="10dp"
      android:ems="10"
      android:hint="BookName"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toTopOf="@+id/authorname"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/authorname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="83dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="115dp"
      android:layout_marginBottom="10dp"
      android:ems="10"
      android:hint="AuthorName"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toTopOf="@+id/genre"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/bookname" />

  <Spinner
      android:id="@+id/genre"
      android:layout_width="214dp"
      android:layout_height="47dp"
      android:layout_marginStart="83dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="115dp"
      android:layout_marginBottom="10dp"
      android:entries="@array/genres"
      app:layout_constraintBottom_toTopOf="@+id/price"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/authorname" />

  <Button
      android:id="@+id/addbook"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="148dp"
      android:layout_marginTop="11dp"
      android:layout_marginEnd="175dp"
      android:layout_marginBottom="178dp"
      android:text="Add"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/stock" />

  <EditText
      android:id="@+id/price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="83dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="115dp"
      android:layout_marginBottom="10dp"
      android:ems="10"
      android:hint="Price"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toTopOf="@+id/stock"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/genre" />

  <EditText
      android:id="@+id/stock"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="83dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="115dp"
      android:layout_marginBottom="10dp"
      android:ems="10"
      android:hint="Stock"
      android:inputType="number"
      app:layout_constraintBottom_toTopOf="@+id/addbook"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/price" />

  <TextView
      android:id="@+id/logout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="325dp"
      android:layout_marginTop="686dp"
      android:layout_marginEnd="33dp"
      android:layout_marginBottom="26dp"
      android:text="Sign Out"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
